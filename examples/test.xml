<?xml version='1.0' encoding='UTF-8'?>
<TEI xmlns="http://www.tei-c.org/ns/1.0">
	<teiHeader>
		<fileDesc>
			<titleStmt>
				<title>TEI XML collation file for open-cbgm unit tests</title>
			</titleStmt>
			<publicationStmt>
				<p>Temporary publicationStmt for validation</p>
			</publicationStmt>
			<sourceDesc>
				<listWit>
					<witness xml:id="A" />
					<witness xml:id="B" />
					<witness xml:id="C" />
					<witness xml:id="D" />
					<witness xml:id="E" />
				</listWit>
			</sourceDesc>
		</fileDesc>
	</teiHeader>
	<text xml:lang="GRC">
		<body>
			<div type="book" n="B00">
				<div type="chapter" n="B00K0">
					<ab n="B00K0V0">
						<!-- Simple local stemma with two readings and a clear relationship -->
						<app n="B00K0V0U2">
							<rdg n="a" wit="#A #B #C">a</rdg>
							<rdg n="b" wit="#D #E">b</rdg>
							<note>
								<label>Test 0:0/2</label>
								<fs>
									<f name="connectivity">
										<numeric value="5" />
									</f>
								</fs>
								<graph type="directed">
									<node n="a" />
									<node n="b" />
									<arc from="a" to="b" />
								</graph>
							</note>
						</app>
						<!-- Local stemma with four readings and depth 2 -->
						<app n="B00K0V0U4">
							<rdg n="a" wit="#A #B">a</rdg>
							<rdg n="b" wit="#C">b</rdg>
							<rdg n="c" wit="#D">c</rdg>
							<rdg n="d" wit="#E">d</rdg>
							<note>
								<!-- Test with no label -->
								<!-- Test implicit "absolute" connectivity -->
								<graph type="directed">
									<node n="a" />
									<node n="b" />
									<node n="c" />
									<node n="d" />
									<arc from="a" to="b" />
									<arc from="a" to="c" />
									<arc from="c" to="d" />
								</graph>
							</note>
						</app>
						<!-- Local stemma with defective and orthographic subvariants -->
						<app n="B00K0V0U6">
							<rdg n="a" wit="#A">a</rdg>
							<rdg n="b" wit="#B">b</rdg>
							<rdg n="bf" type="defective" wit="#C">bf</rdg>
							<rdg n="c" wit="#D">c</rdg>
							<rdg n="co" type="orthographic" wit="#E">co</rdg>
							<note>
								<label>Test 0:0/6</label>
								<!-- Test default connectivity value -->
								<graph type="directed">
									<node n="a" />
									<node n="b" />
									<node n="bf" />
									<node n="c" />
									<node n="co" />
									<arc from="a" to="b" />
									<arc from="a" to="c" />
									<arc from="b" to="bf" />
									<arc from="c" to="co" />
								</graph>
							</note>
						</app>
						<!-- Local stemma where the Ausgangstext could be one of two readings, there is a split attestation for one reading, and one witness is lacunose -->
						<app n="B00K0V0U8">
							<rdg n="a">a</rdg>
							<rdg n="b" wit="#B">b</rdg>
							<rdg n="c" wit="#D">c</rdg>
							<rdg n="c2" type="split" wit="#C">c</rdg>
							<witDetail n="zw-a/b" type="ambiguous" wit="#A" target="a b">zw-a/b</witDetail>
							<note>
								<label>Test 0:0/8</label>
								<fs>
									<f name="connectivity">
										<numeric value="5" />
									</f>
								</fs>
								<graph type="directed">
									<node n="a" />
									<node n="b" />
									<node n="c" />
									<node n="c2" />
									<node n="zw-a/b" />
									<arc from="zw-a/b" to="a">
										<label>0</label>
									</arc>
									<arc from="zw-a/b" to="b">
										<label>0</label>
									</arc>
									<arc from="a" to="c" />
									<arc from="b" to="c2" />
								</graph>
							</note>
						</app>
					</ab>
				</div>
			</div>
		</body>
	</text>
</TEI>
